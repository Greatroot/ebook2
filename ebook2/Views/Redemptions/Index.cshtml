@model IEnumerable<ebook2.Models.Redemption>

@{
    ViewData["Title"] = "Index";
}

<h2>Redemptions </h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RedemptionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RedemptionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RedemptionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
